@model Dolphin.Models.Reports
@{
    ViewBag.Title = "editRegistryStatus";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    #divload {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 9999;
        background: url("../files/assets/images/login-gif-11.gif") no-repeat center center rgba(0,0,0,0.25);
    }

    .errortext {
        border: 1px solid red !important;
    }
</style>
<div class="loader" id="divload"></div>
@using (Html.BeginForm("editRegistryStatus", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="page-header-title">
                    <h4 class="m-b-10">Update Registry Status</h4>
                </div>

            </div>
        </div>
    </div>
</div>
<div class="pcoded-inner-content">
    <div class="main-body">
        <div class="page-wrapper">
            <div class="page-body">
                <div class="row">
                    <div class="col-md-12">
                        <!-- HTML5 Export Buttons table start -->
                        <div class="card">
                            <div class="card-header table-card-header">

                            </div>
                            <p style="color: red">
                                @TempData["editRegistryStatus"]
                            </p>
                            <div class="card-block">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <div class="x_panel">
                                            <div class="x_title">
                                                <h2>Plot Details @*<small>List Of Sites</small>*@</h2>
                                                <ul class="nav navbar-right panel_toolbox">
                                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                                                </ul>
                                                <div class="clearfix"></div>
                                            </div>
                                            <div class="row ">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Branch :</b></label>
                                                        <label id="BranchName">@Model.BranchName</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Booking No :</b></label>
                                                        <label id="BookingNo1">@Model.BookingNo</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b> Booking Date :</b></label>
                                                        <label id="BookingDate">@Model.BookingDate</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label> <b>Plot No :</b></label>
                                                        <label id="PlotNo">@Model.PlotNo</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Payment Plan :</b></label>
                                                        <label id="Payplan">@Model.PlanName</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Customer Name :</b></label>
                                                        <label id="CustomerName">@Model.CustomerName</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Associate Name :</b></label>
                                                        <label id="AssociateName">@Model.AssociateName  </label>
                                                    </div>
                                                </div>

                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Plot Amount :</b></label>
                                                        <label id="PlotAmount">@Model.PlotAmount</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">

                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>PLC Charges :</b></label>
                                                        <label id="PK_PLCCharge">@Model.PK_PLCCharge</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Net Plot Amount :</b></label>
                                                        <label id="NetPlotAmount">@Model.NetPlotAmount</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3" hidden="hidden">
                                                    <div class="form-group">
                                                        <label><b>BookingAmount :</b></label>
                                                        <label id="BookingAmount">@Model.BookingAmount</label>
                                                    </div>
                                                </div>
                                                <div class="col-md-3" hidden="hidden">
                                                    <div class="form-group">
                                                        <label><b>Fk_UserId:</b></label>
                                                        @Html.HiddenFor(m => m.Fk_UserId)
                                                    </div>
                                                </div>
                                                <div class="col-md-3" hidden="hidden">
                                                    <div class="form-group">
                                                        <label><b>Fk_BookingId:</b></label>
                                                        @Html.HiddenFor(m => m.FK_BookingId)
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Paid Amount:</b></label>
                                                        <label id="PaidAmount">@Model.PaidAmount</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        <label><b>Booking Status :</b></label>
                                                        <label id="BookingStatus">@Model.BookingStatus</label>

                                                    </div>

                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        isRegistry<span style="color: red">*</span>
                                                       @if (Model.isRegistry == "True")
                                                       {
                                                        <input type="checkbox" id="chkisRegistry" checked="checked" onchange="openpop();" />
                                                            @Html.HiddenFor(m => m.isRegistry)
                                                       }
                                                       else
                                                       {
                                                        <input type="checkbox" id="chkisRegistry" onchange="openpop();" />
                                                            @Html.HiddenFor(m => m.isRegistry)
                                                       }
                                                       
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        Registry Name
                                                        @Html.TextBoxFor(m => m.RegistryName)
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        Gata No.
                                                        @Html.TextBoxFor(m => m.gata)
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="form-group">
                                                        Rakba No.
                                                        @Html.TextBoxFor(m => m.Rakbano)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        Registry Date
                                                        @Html.TextBoxFor(m => m.registerydate, new { @class = "form-control", @readonly = "ds" })
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="form-group">
                                                        Dakhil Kharij Date
                                                        @Html.TextBoxFor(m => m.kharijdate, new { @class = "form-control", @readonly = "ds" })
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <div class="form-group">
                                                        Remark<span style="color: red">*</span>
                                                        @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control", @Placeholder = "Remarks", @onchange = "getLoggerName();", @rows = "7", @col = "20" })
                                                    </div>

                                                </div>

                                            </div>
                                         </div>
                                    </div>
                                </div>
                            
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        @if (Model.FK_BookingId == null)
                                        {
                                            <input class="btn btn-success pull-right" type="submit" onclick="return validateform();" value="Save" id="btnupdate" name="btnsave" />
                                        }
                                        else
                                        {
                                            @Html.HiddenFor(m => m.FK_BookingId, new { @Value = @Model.FK_BookingId })
                                            <input class="btn btn-success pull-right" type="submit" onclick="return validateform();" value="Update" id="btnUpdate" name="btnUpdate" />
                                        }
                                        <a class="btn btn-info" href="/AdminReports/RegistryReport">Back To List</a>
                                    </div>





                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">

<script>
    $(document).ready(function () {

        $("#divload").css({ 'display': 'none' });
    });

  


</script>
<script>

    $('#kharijdate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#registerydate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });

</script>


