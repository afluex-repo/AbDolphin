@model Dolphin.Models.Reports

@{
    ViewBag.Title = "BusinessReport";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}

<div class="loader" id="divload"></div>

@using (Html.BeginForm("BusinessReport", "AssociateDashBoard", FormMethod.Post, new { @id = "form1" }))
{
    <p style="color: red"> @TempData["Plot"]</p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        @*<h4 class="m-b-10">Direct Business Reports</h4>*@
                        <h4 class="m-b-10">Business Reports</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                 <span style="color:red;">@TempData["msg"]</span>   
                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                LoginId
                                                @Html.TextBoxFor(m => m.UserLoginId, new { @class = "form-control", @Placeholder = "Search by LoginId" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                From Date
                                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                To Date
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="btnSearch" onclick="return validate();"/>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Login Detail</th>
                                                    <th>Direct Business</th>
                                                    <th>Team Business</th>
                                                    <th>Direct Member Joining</th>
                                                    <th>Team Member Joining</th>
                                                    <th>Team Income Summary Details</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                    @if (Model != null)
                                                    {
                                                        if (Model.lstP != null)
                                                        {
                                                            int i = 1;
                                                            foreach (var Item in Model.lstP)
                                                            {
                                                                <tr class="text-left">
                                                                    <td>@i</td>
                                                                    <td style="display:none">@Item.UserLoginId</td>
                                                                    <td>@Item.LoginId</td>
                                                                    <td>@Item.TotalAllotmentAmount</td>
                                                                    <td>@Item.TeamBusiness</td>
                                                                    <td>@Item.DirectMemberJoining</td>
                                                                    <td>@Item.TeamMemberJoining</td>
                                                                    <td><a href="/AssociateDashBoard/SummryReports?LoginId=@Item.UserLoginId" class="btn btn-info">Summry Reports</a></td>
                                                                </tr>
                                                                i++;
                                                            }
                                                        }
                                                    }

                                                </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">


<script>
    function validate()
    {
        if ($("#UserLoginId").val() == "") {
            $("#UserLoginId").addClass('errortext');
            $('#UserLoginId').focus();
            return false;
        }
    }
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy'
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy'
    });
</script>

<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>
