@model Dolphin.Models.Plot

@{
    ViewBag.Title = "CommissionPaidReportTotal";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("CommissionPaidReportTotal", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">TDS Report</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-block">
                                    <div class="form-group row">
                                        <div class="col-sm-3">
                                            <label class="float-label">Associate Id</label>
                                            @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Login Id" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Approved From Date</label>
                                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = true })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Approved To Date</label>
                                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date", @readonly = true })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <input class="btn btn-success" style="margin-top:23px;" type="submit" value="Search" id="btnSearch" name="btnSearch" />
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Associate Details</th>
                                                    <td>Father Name</td>
                                                    <td>Pan No.</td>
                                                    <th>Total Commission Paid</th>
                                                    <th>Total TDS</th>
                                               
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstpaidcommission != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstpaidcommission)
                                                        {
                                                            <tr>
                                                                <td>@i</td>
                                                                <td>@Item.LoginId</td>
                                                                <td>@Item.Name</td>
                                                                <td>@Item.PanNo</td>
                                                                <td>@Item.Amount</td>
                                                                <td>@Item.BookingPercent</td>
                                                            </tr>
                                                            i++;
                                                        }


                                                    }
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>

                                                    <th> </th>
                                                    <th></th>
                                                    <td></td>
                                                    <th style="text-align:right">Total</th>
                                                    <th>@ViewBag.Amount</th>
                                                    <th>@ViewBag.TDS</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}
<script src="../vendor/jquery/jquery.min.js"></script>
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });

</script>
