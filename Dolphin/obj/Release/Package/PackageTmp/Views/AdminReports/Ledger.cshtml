@model Dolphin.Models.Plot

@{
    ViewBag.Title = "Ledger";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("Ledger", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Ledger</h5>
                </div>
            </div>
        </div>
        <div class="items">
            <div class="card">
                <div class="card-body" id="Details1">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label> Customer ID :</label>
                                <label id="CustID">@ViewBag.UserId</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label> Customer Name :</label>
                                <label id="CustName">@ViewBag.CName</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Affiliate ID :</label>
                                <label id="AssoID">@ViewBag.AssociateId</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Affiliate Name :</label>
                                <label id="AssoName">@ViewBag.AssoName</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Total Paid Amount :</label>
                                <label id="ActPlotAmt">@ViewBag.TotalPaidAmount</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Total Return Amount :</label>
                                <label id="disct">@ViewBag.TotalReturnAmount</label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Balance Amount :</label>
                                <label id="bookingAmt">@ViewBag.balance</label>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="example2" class="table table-striped table-bordered">
                                    <thead>
                                        <tr class="table-active">
                                            <th>Sr No.</th>
                                            <th>Plot Details</th>
                                            <th>Cr Amount</th>
                                            <th>Dr Amount</th>
                                            <th>Payment Mode</th>
                                            <th>Bank Name</th>
                                            <th>Branch Name</th>
                                            <th>Transaction No</th>
                                            <th>Transaction Date</th>
                                            <th>Return Date</th>
                                            <th>Remarks</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            if (Model.lstPlot != null)
                                            {
                                                int i = 1;
                                                foreach (var item in Model.lstPlot)
                                                {
                                                    <tr class="text-left">
                                                        <td>@i</td>
                                                        <td>@item.PlotInfo</td>
                                                        <td>@item.CrAmount</td>
                                                        <td>@item.DrAmount</td>
                                                        <td>@item.PaymentMode</td>
                                                        <td>@item.BankName</td>
                                                        <td>@item.BankBranch</td>
                                                        <td>@item.TransactionNumber</td>
                                                        <td>@item.TransactionDate</td>
                                                        <td>@item.PaymentDate</td>
                                                        <td>@item.Remark</td>
                                                    </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
