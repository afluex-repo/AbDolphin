                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>Total Amount :-</th>
                                <th style="color:dodgerblue;font-weight:800">@ViewBag.TotalAmount</th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            <tr class="table-active">
                                <th>S No.</th>
                                <th>Customer ID</th>
                                <th>Affiliate ID</th>
                                <th>Branch Name</th>
                                <th>Site Name</th>
                                <th>Sector Name</th>
                                <th>Block Name</th>
                                <th>Plot Number</th>
                                <th>Mode</th>
                                <th>Date</th>
                                <th>Transaction No.</th>
                                <th>Receiver Bank</th>
                                <th>Payment Remarks</th>
                                <th>Bank Details</th>
                                <th>Amount</th>
                                <th>Payment Date</th>
                                <th>Account Head Name</th>
                                <th>Status</th>
                                <th>Description</th>
                                @*<th>Payment Clear Date</th>
                                 <th>Action</th>*@
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <div class="row mt-3">
                    <div class="col-md-3 mb-3">
                        <label>Payment Clear Date</label>
                        @Html.TextBoxFor(m => m.ApprovedDate, new { @class = "form-control", @readonly = true, @placeholder = "DD/MM/YYYY" })

                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="d-block">&nbsp;</label>
                        <input type="submit" id="btnapprove" onclick="return Validate();" name="btnapprove" class="btn btn-success" value="Approve" />
                        <input type="submit" id="btnreject" onclick="return Validate();" name="btnreject" class="btn btn-danger" value="Reject" />
                    </div>
                </div>
            </div>
        </div>

    </div>
    <input type="hidden" id="txtdecription" />
    <input type="hidden" id="txtAppDt" />
}
