@model Dolphin.Models.TraditionalAssociate
@{
    ViewBag.Title = "AdvisorUplineDetail";

    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("AdvisorUplineDetail", "TraditionalAssociate", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Affiliate Upline</h5>
                </div>
                @*<p style="color: red;display: block; margin-bottom:0px; text-align:center">
                        @TempData["SectorMaster"]
                    </p>*@
            </div>
        </div>
        <div class="items">
            <div class="card">
                <div class="card-body row">
                    <div class="col-sm-3">
                        <label class="float-label">Affiliate Id</label>
                        @Html.TextBoxFor(m => m.AssociateID, new { @class = "form-control", @Placeholder = "Search by Affiliate ID" })
                        <span class="form-bar"></span>
                    </div>

                    <div class="col-sm-3">
                        <label class="float-label d-block">&nbsp;</label>
                        <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" onclick="return validateform();" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr class="table-active">
                                <th>S No.</th>
                                <th>Affiliate ID</th>
                                <th>Affiliate Name</th>
                                <th>Rank Name</th>
                                <th>Rank</th>
                                <th>Branch Name</th>
                                <th>Mobile Number</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstTrad != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstTrad)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.AssociateID</td>
                                            <td>@Item.AssociateName  </td>
                                            <td>@Item.DesignationName </td>
                                            <td>@Item.Percentage</td>
                                            <td>@Item.BranchName</td>
                                            <td>@Item.Contact</td>

                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>S No.</th>
                                <th>Affiliate ID</th>
                                <th>Affiliate Name</th>
                                <th>Rank Name</th>
                                <th>Rank</th>
                                <th>Branch Name</th>
                                <th>Mobile Number</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>


    </div>




}



<script>


    function validateform() {
        $(".errortext").removeClass("errortext");


        if ($('#AssociateID').val() == '') {
            $("#AssociateID").addClass('errortext');
            $('#AssociateID').focus();
            alert("Please fill Associate ID");
            return false;
        }


        return true;
    }
</script>



