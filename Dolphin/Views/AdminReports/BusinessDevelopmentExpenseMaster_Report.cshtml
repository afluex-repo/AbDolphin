@model Dolphin.Models.Reports

@{
    ViewBag.Title = "BusinessDevelopmentExpenseMaster_Report";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("BusinessDevelopmentExpenseMaster_Report", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    
    


    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Business Development Expense Report</h5>
                </div>
            </div>
        </div>
        <div class="items">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <div class="form-group">
                                <label>LoginId </label>
                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Search LoginId" })
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="form-group">
                                <label>Month </label>
                                <select class="form-control form-select" id="Month" name="Month">
                                    <option value="0">--Select Month--</option>
                                    <option value="1">January</option>
                                    <option value="2">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>

                                </select>

                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="form-group">
                                <label class="d-block">  &nbsp;</label>
                                <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Name</th>
                                <th>Target</th>
                                <th>Business</th>
                                <th>Income</th>
                                <th>Month</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstExpenseMasterBusinessReport != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstExpenseMasterBusinessReport)
                                    {
                                        <tr class="text-left">

                                            <td>@i</td>
                                            <td>@Item.Name</td>
                                            <td>@Item.Target</td>
                                            <td>@Item.Business</td>
                                            <td>@Item.Income</td>
                                            <td>@Item.Month</td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
