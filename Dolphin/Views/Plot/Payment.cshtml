                                            <td>@Item.AssociateID (@Item.AssociateName)</td>

                                            <td>@Item.BranchName</td>
                                            <td>@Item.SiteName</td>
                                            <td>@Item.SectorName</td>
                                            <td>@Item.BlockName</td>
                                            <td>@Item.PlotNumber</td>
                                            <td>@Item.PaymentMode</td>
                                            <td>@Item.TransactionDate</td>
                                            <td>@Item.TransactionNumber</td>
                                            <td>@Item.ReceiverBank</td>
                                            <td>@Item.PaymentRemarks</td>
                                            <td>@Item.Remark</td>
                                            <td>@Item.PaidAmount</td>
                                            <td>@Item.PaymentDate</td>
                                            <td>@Item.AccountHeadName</td>
                                            <td>@Item.PaymentStatus</td>
                                            <td>
                                                <input type="text" id="txtDesc @i" name="txtDesc_@i" onchange="getdata(this)" />
                                            </td>
                                            @*<td>
                            <input type="date" id="txtAppDate @i" name="txtAppDate @i" onchange="getdata2(this)" />
                        </td>*@
                                            @*<td>*@
                                            @*<a href="#" class="btn btn-success btn-sm" onclick="Approve('@i','@Item.UserID');">Approve</a>
                        <a href="#" class="btn btn-danger btn-sm" onclick="Reject('@i','@Item.UserID');">Reject</a>*@
