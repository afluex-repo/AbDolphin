@model Dolphin.Models.Home
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--favicon-->
    <link rel="icon" href="assets/images/favicon-32x32.png" type="image/png" />
    <!--plugins-->
    <link href="/assets33/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <link href="/assets33/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" />
    <link href="/assets33/plugins/metismenu/css/metisMenu.min.css" rel="stylesheet" />
    <!-- loader-->
    @*<link href="/assets33/css/pace.min.css" rel="stylesheet" />*@
    <script src="/assets33/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="/assets33/css/bootstrap.min.css" rel="stylesheet">
    <link href="/assets33/css/bootstrap-extended.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&amp;display=swap" rel="stylesheet">
    <link href="/assets33/css/app.css" rel="stylesheet">
    <link href="/assets33/css/icons.css" rel="stylesheet">
    <title></title>
    <style>
        .section-authentication-cover .authentication {
            align-items: center;
            height: 100vh;
        }
       @@media (min-width:992px){
             body{
               background: url(/assets33/images/login-images/body_bg.jpg);
                 background-repeat: no-repeat;
                  background-size: cover;
            }
        }
    </style>
</head>
<body>
    <!--wrapper-->
    <div class="wrapper">
        <div class="section-authentication-cover">
            <div class="container">
                <div class="row g-0 authentication justify-content-center">
                    <div class="col-12 col-xl-5 col-lg-5 d-none d-lg-block">
                        <div class="card shadow-none bg-transparent shadow-none rounded-0 mb-0">
                            <div class="card-body">
                                <img src="/assets33/images/login-images/home.png " class="img-fluid" alt="" />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-xl-4 col-lg-4 offset-lg-1">
                        <div class="card"  style="background: url(/assets33/images/login-images/login_bg.png);
    background-size: 100% 100%;" >
                            <div class="card-body p-sm-5">
                                <div class="">
                                    <div class="mb-3 text-center">
                                        <img src="~/assets33/images/logo.png" width="100" alt="">
                                    </div>
                                    <div class="text-center mb-4">
                                        <h5 class="">Sign into your account</h5>
                                        <p style="color:red">@TempData["Login"]</p>
                                    </div>
                                    <div class="form-body">
                                        <form action="/Home/LoginActionWeb" method="GET" class="row g-3">
                                            <div class="col-12">
                                                <label for="inputEmailAddress" class="form-label">Login Id</label>
                                                <input class="form-control" type="text" id="txtLoginID" name="LoginID" placeholder="Login Id">
                                            </div>
                                            <div class="col-12">
                                                <label for="inputChoosePassword" class="form-label">Password</label>
                                                <div class="input-group" id="show_hide_password">
                                                    <input class="form-control border-end-0" type="password" id="inputChoosePassword" name="password" placeholder="Password">
                                                    <a href="javascript:;" class="input-group-text" style="background-color:#e8f0fe"><i class="bx bx-hide"></i></a>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid gap-2">
                                                    <button type="submit" class="btn text-white" style="background:#ab7d20;" onclick="return validateform()">Login</button>
                                                    <a href="/ForgotPassword/ForgotPassword" style="background:#c6c7c89c;" class="forgot-password btn btn-light">Forgot Password</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end row-->
            </div>
        </div>
    </div>
    <!--end wrapper-->
    <!-- Bootstrap JS -->
    <script src="/assets33/js/bootstrap.bundle.min.js"></script>
    <!--plugins-->
    <script src="/assets33/js/jquery.min.js"></script>
    <script src="/assets33/plugins/simplebar/js/simplebar.min.js"></script>
    <script src="/assets33/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="/assets33/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <!--Password show & hide js -->
    <script>
         $(document).ready(function () {
         	$("#show_hide_password a").on('click', function (event) {
         		event.preventDefault();
         		if ($('#show_hide_password input').attr("type") == "text") {
         			$('#show_hide_password input').attr('type', 'password');
         			$('#show_hide_password i').addClass("bx-hide");
         			$('#show_hide_password i').removeClass("bx-show");
         		} else if ($('#show_hide_password input').attr("type") == "password") {
         			$('#show_hide_password input').attr('type', 'text');
         			$('#show_hide_password i').removeClass("bx-hide");
         			$('#show_hide_password i').addClass("bx-show");
         		}
         	});
         });

    </script>
    <script src="/assets33/js/app.js"></script>
</body>
</html>

<script>
   function validateform() {
       if ($('#txtLoginID').val() == '') {
           $("#txtLoginID").addClass('errortext');
           $('#txtLoginID').focus();
           $('#txtLoginID').val('');
           return false;
       }
       //if ($('#txtPassword').val() == '') {
       //    $("#txtPassword").addClass('errortext');
       //    $('#txtPassword').focus();
       //    $('#txtLoginID').val('');
       //    return false;
       //}
       if ($('#inputChoosePassword').val() == '') {
           $("#inputChoosePassword").addClass('errortext');
           $('#inputChoosePassword').focus();
           $('#inputChoosePassword').val('');
           return false;
       }
       return true;
   }
</script>
<style>
    .errortext {
        border: 2px solid red !important;
        background-color: #fff0f0 !important;
    }
    .successtext {
        border: 2px solid red !important;
        background-color: #808080 !important;
    }
</style>