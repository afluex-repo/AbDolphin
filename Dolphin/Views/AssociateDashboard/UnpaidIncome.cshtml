@model Dolphin.Models.AssociateBooking

@{
    ViewBag.Title = "UnpaidIncome";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}

@using (Html.BeginForm("UnpaidIncome", "AssociateDashboard", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Unpaid Income Report</h5>
                    <span style="color: red">
                        @TempData[""]
                    </span>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body row">
                <div class="col-md-2 mb-3">
                    <label class="float-label">From ID</label>
                    @Html.TextBoxFor(m => m.FromID, new { @class = "form-control", @Placeholder = "Search by FromID" })
                </div>
                <div class="col-md-2 mb-3">
                    <label class="float-label">To ID</label>
                   @Html.TextBoxFor(m => m.ToID, new { @class = "form-control", @Placeholder = "Search by To ID" })
                </div>
                <div class="col-md-2 mb-3">
                    <label class="float-label">From Date</label>
                    @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "ds" })
                </div>
                <div class="col-md-2 mb-3">
                    <label class="float-label">To Date</label>
                    @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds" })
                </div>

                <div class="col-md-2 mb-3">
                    <label class="float-label d-block">&nbsp;</label>
                    <input class="btn btn-success pull-left" type="submit" value="Search" id="btnSearch" name="Search" />
                </div>

                <div class="table-responsive">
                    <table id="example2" class="table table-bordered table-striped mb-0">
                        <thead>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Cosing Date</th>
                                <th>From ID</th>
                                <th>From Name</th>
                                <th>To ID</th>
                                <th>To Name</th>
                                <th>Business Amount</th>
                                <th>Difference Percentage</th>
                                <th>Income</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstPlot != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstPlot)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.FromDate</td>
                                            <td>@Item.FromID</td>
                                            <td>@Item.FromName</td>
                                            <td>@Item.ToID</td>
                                            <td>@Item.ToName</td>
                                            <td>@Item.Amount</td>
                                            <td>@Item.DifferencePercentage</td>
                                            <td>@Item.Income</td>

                                        </tr>

                                        i++;
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>@ViewBag.Amount</th>
                                <th>@ViewBag.DifferencePercentage</th>
                                <th>@ViewBag.Income</th>
                            </tr>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Cosing Date</th>
                                <th>From ID</th>
                                <th>From Name</th>
                                <th>To ID</th>
                                <th>To Name</th>
                                <th>Business Amount</th>
                                <th>Difference Percentage</th>
                                <th>Income</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    
}



<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });

</script>