@model Dolphin.Models.AssociateBooking

@{
    ViewBag.Title = "PayoutDetails";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}


@using (Html.BeginForm("PayoutDetails", "AssociateDashboard", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Payout Details</h5>
                    <span style="color: red">
                        @TempData[""]
                    </span>
                </div>
            </div>
        </div>
        <div class="card">
                <div class="card-body row">

                    <div class="col-sm-3 mb-3">
                        <label class="float-label"> PayOut No.</label>
                       @Html.TextBoxFor(m => m.PayOutNo, new { @class = "form-control", @Placeholder = "Search by PayOutNo" })
                    </div>
                    <div class="col-sm-3 mb-3">
                        <label class="float-label">From Date</label>
                       @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "ds", @placeholder = "From Date" })
                    </div>
                    <div class="col-sm-3 mb-3">
                        <label class="float-label">To Date</label>
                        @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds", @placeholder = "To Date" })
                    </div>

                    <div class="col-md-3 mb-3">
                        <label class="float-label d-block">&nbsp;</label>
                        <input class="btn btn-success pull-left" type="submit" value="Search" id="btnSearch" name="Search" />
                    </div>

                <div class="table-responsive">
                    <table id="example2" class="table table-bordered table-striped mb-0">
                        <thead>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Closing Date</th>
                                <th>PayOut No</th>
                                <th>Login ID</th>
                                <th>First Name</th>
                                <th>Gross Amount</th>
                                <th hidden="hidden"> TDS</th>
                                <th> Processing</th>
                                <th> NetAmount</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstPlot != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstPlot)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.ClosingDate</td>
                                            <td>@Item.PayOutNo</td>
                                            <td>@Item.AssociateLoginID  </td>
                                            <td>@Item.FirstName </td>
                                            <td>@Item.GrossAmount</td>
                                            <td hidden="hidden">@Item.TDS</td>
                                            <td>@Item.Processing</td>
                                            <td>@Item.NetAmount</td>
                                           
                                            <td>
                                                <a href="/AssociateDashboard/ClosingWisePayoutDetails?PK_PaidPayoutId=@Item.PK_PaidPayoutId" class="btn btn-success btn-sm" target="_blank">Print</a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th>Total</th>
                                <th>@ViewBag.GrossAmount</th>
                                <th hidden="hidden"> TDS</th>
                                <th>@ViewBag.Processing</th>
                                <th>@ViewBag.NetAmount</th>
                                <th></th>
                            </tr>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th> Closing Date</th>
                                <th> PayOut No</th>
                                <th>  Login ID</th>
                                <th> First Name</th>
                                <th> Gross Amount</th>
                                <th hidden="hidden"> TDS</th>
                                <th> Processing</th>
                                <th> NetAmount</th>
                                <th></th>
                               
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

}



<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>
     
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
   
</script>


