                <tr>
                    <td style="border: 1px solid black;"><b>Area:    </b>@ViewBag.PlotArea</td>
                    <td style="border: 1px solid black;"><b>PLC:    </b>@ViewBag.PLC</td>
                    <td style="border: 1px solid black;" colspan="3"><b>Payment For:    </b>@ViewBag.ReasonOfPayment</td>
