@model Dolphin.Models.AssociateBooking

@{
    ViewBag.Title = "DistributePayment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using (Html.BeginForm("DistributePayment", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{
    
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Distribute Payment</h5>
                </div>
                <p style="color: red;display: block; margin-bottom:0px; text-align:center">
                    @TempData["distributed"]
                </p>
            </div>
        </div>
        <div class="items">
            <div class="card">
                <div class="card-body row">
                    <div class="col-md-2 mb-3">
                        <div class="form-group">
                            <label>Date</label>
                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds" })
                        </div>
                    </div>

                    <div class="col-md-2 mb-3">
                        <div class="form-group">
                            <label class="d-block">&nbsp;</label>
                            <input class="btn btn-success" type="submit" value="Distribute" id="btnSave" name="Save" onclick="return validateform();" />
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Login Id</th>
                                <th>Associate Name</th>
                                <th>Income</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstPlot != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstPlot)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.ToID</td>
                                            <td>@Item.ToName</td>
                                            <td>@Item.Income</td>

                                        </tr>

                                        i++;
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th></th>
                                <th></th>
                                <th style="text-align: center;">Total</th>
                                <th>@ViewBag.Total</th>
                            </tr>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Login Id</th>
                                <th>Associate Name</th>
                                <th>Income</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
}


<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
        minDate: 0
    });

    function validateform() {
        $(".errortext").removeClass("errortext");

        if ($('#ToDate').val() == '') {
            $("#ToDate").addClass('errortext');
            $('#ToDate').focus();
            return false;
        }

       

        return true;
    }
</script>



<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>

