@model Dolphin.Models.Master

@{
    ViewBag.Title = "BlockList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}




@using (Html.BeginForm("BlockList", "Master", FormMethod.Post, new { @id = "form1" }))
{
    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Block List</h5>
                    <button class="btn btn-primary repeater-add-btn px-4"><a href="/Master/BlockMaster" class="text-white">Add New</a></button>
                </div>
                <p style="color: red;display: block; margin-bottom:0px; text-align:center">
                    @TempData["BlockMaster"]
                </p>
            </div>
        </div>


        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>SiteName</th>
                                <th>Sector Name</th>
                                <th>Block Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @if (Model != null)
                           {
                               if (Model.lstBlock1 != null)
                               {
                                   int i = 1;
                                   foreach (var Item in Model.lstBlock1)
                                   {
                                    <tr class="text-left">
                                        <td>@i</td>
                                        <td>@Item.SiteName</td>
                                        <td>@Item.SectorName</td>
                                        <td>@Item.BlockName</td>
                                        <td>
                                            <a href="/Master/BlockMaster?BlockID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                                            <a href="/Master/DeleteBlock?id=@Item.BlockID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this Block?');">Delete</a>
                                        </td>

                                    </tr>

                                       i++;
                                   }
                               }
                           }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>SiteName</th>
                                <th>Sector Name</th>
                                <th>Block Name</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>


    </div>


}
