@model Dolphin.Models.TraditionalAssociate

@{
    ViewBag.Title = "UnpaidIncome";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("UnpaidIncome", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{

    <div class="page-content">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between">
                    <h5 class="mb-0"> Income Report</h5>
                </div>
                <p style="color: red;display: block; margin-bottom:0px; text-align:center">
                    @TempData[""]
                </p>
            </div>
        </div>
        <div class="items">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 mb-3">
                            <div class="form-group">
                                <label>  FromID</label>
                                @Html.TextBoxFor(m => m.FromID, new { @class = "form-control", @Placeholder = "Search by FromID" })
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="form-group">
                                <label> ToID</label>
                                @Html.TextBoxFor(m => m.ToID, new { @class = "form-control", @Placeholder = "Search by To ID" })
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="form-group">
                                <label> From Date</label>
                                @Html.TextBoxFor(m => m.JoiningFromDate, new { @class = "form-control", @readonly = "ds" })
                            </div>
                        </div>
                        <div class="col-md-2 mb-3">
                            <div class="form-group">
                                <label> To Date</label>
                                @Html.TextBoxFor(m => m.JoiningToDate, new { @class = "form-control", @readonly = "ds" })
                            </div>
                        </div>

                        <div class="col-md-2 mb-3">
                            <div class="form-group">
                                <label class="d-block">  &nbsp;</label>
                                <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr class="table-active">
                                <th>Sr No.</th>
                                <th>Current Date</th>
                                <th>From ID</th>
                                <th>From Name</th>
                                <th>To ID</th>
                                <th>To Name</th>
                                <th>Business Amount</th>
                                <th>Difference Percentage</th>
                                <th>Income</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                if (Model.lstTrad != null)
                                {
                                    int i = 1;
                                    foreach (var Item in Model.lstTrad)
                                    {
                                        <tr class="text-left">
                                            <td>@i</td>
                                            <td>@Item.JoiningFromDate</td>
                                            <td>@Item.FromID</td>
                                            <td>@Item.FromName</td>
                                            <td>@Item.ToID</td>
                                            <td>@Item.ToName</td>
                                            <td>@Item.Amount</td>
                                            <td>@Item.DifferencePercentage</td>
                                            <td>@Item.Income</td>
                                            <td>@Item.Status</td>
                                        </tr>

                                        i++;
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                @*<th>S No.</th>
                                <th>Cosing Date</th>
                                <th>From ID</th>
                                <th>From Name</th>
                                <th>To ID</th>*@
                                <th colspan="6" style="text-align:end;">Total</th>
                                <th>@ViewBag.Amount</th>
                                <th>@ViewBag.DifferencePerc</th>
                                <th>@ViewBag.Income</th>
                                <th></th>
                            </tr>

                            <tr class="table-active">
                                <th>S No.</th>
                                <th>Cosing Date</th>
                                <th>From ID</th>
                                <th>From Name</th>
                                <th>To ID</th>
                                <th>To Name</th>
                                <th>Business Amount</th>
                                <th>Difference Percentage</th>
                                <th>Income</th>
                                <th>Status</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#JoiningFromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#JoiningToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });

</script>