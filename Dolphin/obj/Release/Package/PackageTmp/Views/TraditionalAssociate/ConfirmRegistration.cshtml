 

@{
    ViewBag.Title = "ConfirmRegistration";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="page-content">
    <div class="wrapper bg-login">
        <div class="error-404 align-items-center justify-content-center">
            <div class="card shadow-none bg-transparent">
                <div class="card">
                    <div class="card-body">
                        <div class="d-lg-flex text-md-center align-items-center justify-content-between">
                            <h5 class="text-success">Registration Successful</h5>
                            <div class="d-flex">
                                <button class="btn btn-primary repeater-add-btn px-4" style="margin-right:10px;"><a href="/TraditionalAssociate/AssociateRegistration" class="text-white">Add New</a></button>
                                <button class="btn btn-primary repeater-add-btn px-4">
                                    <a href="/AdminReports/PrintWelcomeLetter?id=@Session["PKUserID"]" class="text-white" title="Next">Print Letter</a>
                                </button>
                            </div>
                        </div>
                        <p style="color: red;display: block; margin-bottom:0px; text-align:center">
                        </p>
                    </div>
                </div>
                <div class="card-body text-center">
                    <h2 class="display-5 mt-5 text-success">Congratulations !!</h2>
                   <h5 class="my-3 text-warning">Now you are a Dolphin Affiliate</h5>
                    <div class="row justify-content-center">
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center theme-icons shadow-sm p-2 cursor-pointer rounded">
                                <div class="font-22 text-primary">
                                    <i class="fadeIn animated bx bx-user-check"></i>
                                </div>
                                <div class="ms-2">Name: @Session["DisplayNameConfirm"]</div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center theme-icons shadow-sm p-2 cursor-pointer rounded">
                                <div class="font-22 text-primary">
                                    <i class="fadeIn animated bx bx-log-in"></i>
                                </div>
                                <div class="ms-2">Login ID: @Session["LoginIDConfirm"]</div>
                            </div>
                        </div>
                        <div class="col-md-3 mb-3">
                            <div class="d-flex align-items-center theme-icons shadow-sm p-2 cursor-pointer rounded">
                                <div class="font-22 text-primary">
                                    <i class="fadeIn animated bx bx-lock-alt"></i>
                                </div>
                                <div class="ms-2">Password:  @Session["PasswordConfirm"]</div>
                            </div>
                        </div>
                    </div>
                    <h4 class="mt-3 text-success">Thank You!</h4>
                </div>
            </div>
        </div>
    </div>
</div>