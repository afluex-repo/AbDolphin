@model Dolphin.Models.Plot
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>PrintAllotment</title>
    <script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
    <style>
        table, th, td {
            font-size: medium;
            /*border: 1px solid black;*/
            border-collapse: collapse;
        }

        th, td {
            font-size: medium;
            padding: 5px;
        }
    </style>

</head>
<body>
    <div class="container">
        <div style="border:3px solid #199c57;padding-left:10px;padding-right:10px;">
            <table style="border: 0px none black;margin-left:50px">
                <tr style="border: 0px none black;">
                    <td style="border: 0px none black;">
                        <img src="~/assets/img/dolphin.png" height="140" width="123" />
                    </td>
                    <td style="border: 0px none black;"></td>

                    <td style="border: 0px none black;">
                        <h1 style="color:#199c57">ABDOLPHIN INFRATECH BUILDERS & DEVELOPERS PVT LTD</h1>
                        <h5 style="text-align:right">CIN NO.:U70109UP2020PTC130408</h5>
                    </td>
                </tr>

            </table>
            <br />

            <div class="table_Container" style="padding:0 70px;text-align:center">
                <table class="table table-responsive" style="border:2px solid #199c57;width:100%;">
                    <thead>
                        <tr>
                            <th>Sr No.</th>
                            <th>Paid Amount</th>
                            <th>Payment Date</th>
                            <th>Payment Mode</th>
                            <th>Transaction Number</th>
                            <th>Transaction Date</th>
                            <th>Bank Name</th>
                            <th>Bank Branch</th>
                            <th>Cancel Date</th>
                            <th>Cancel Remarks</th>
                            <th>Payment Remarks</th>

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                   {
                       if (Model.lstPlot != null)
                       {
                           int i = 1;
                           foreach (var Item in Model.lstPlot)
                           {
                                    <tr>
                                        <td>@i</td>
                                        <td>@Item.PaidAmount</td>
                                        <td>@Item.PaymentDate</td>
                                        <td>@Item.PaymentMode</td>
                                        <td>@Item.TransactionNumber</td>
                                        <td>@Item.TransactionDate</td>
                                        <td>@Item.BankName</td>
                                        <td>@Item.BankBranch</td>
                                        <td>@Item.CancelDate</td>
                                        <td>@Item.CancelRemark</td>
                                        <td>@Item.PaymentRemarks</td>
                                    </tr>
                               i++;
                           }
                       }
                   }

                    </tbody>
                </table>

            </div>
            <br />
            <br />
            <br /><br /> <br />
        </div>

    </div>
