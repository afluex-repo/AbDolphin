@model Dolphin.Models.Plot
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<style>
    #divload {
        width: 100%;
        height: 100%;
        position: fixed;
        z-index: 9999;
        background: url("../../images/login-gif-11.gif") no-repeat center center rgba(0,0,0,0.25);
    }

    .errortext {
        border: 1px solid red !important;
    }
</style>
<div class="loader" id="divload" ></div>
@using (Html.BeginForm("Payment", "Plot", FormMethod.Post, new { @id = "form1" }))
{
 
   
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Cheque/NEFT/Cash Payment Detail</h4>
                    </div>
                    <p style="color: red">
                        @TempData["Plot"]
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">

                                </div>
                                <div class="card-block">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Select Branch 
                                                @Html.DropDownListFor(m => m.BranchID, new SelectList(ViewBag.ddlBranch, "Value", "Text"), new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                From Date
                                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "Search From Date", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                To Date
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "Search To Date", @readonly = "readonly" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                Payment Mode
                                                @Html.DropDownListFor(m => m.PaymentMode, new SelectList(ViewBag.ddlPaymentMode, "Value", "Text"), new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th><INPUT type="checkbox" onchange="checkAll(this)" name="chk[]" /> Select All</th>
                                                    <th>Customer ID</th>
                                                    <th>Affiliate ID</th>
                                                    <th>Branch Name</th>
                                                    <th>Site Name</th>
                                                    <th>Sector Name</th>
                                                    <th>Block Name</th>
                                                    <th>Plot Number</th>
                                                    <th>Mode</th>
                                                    <th>Date</th>
                                                    <th>Transaction No.</th>
                                                    <th>Receiver Bank</th>
                                                    <th>Payment Remarks</th>
                                                    <th>Bank Details</th>
                                                    <th>Amount</th>
                                                    <th>Payment Date</th>
                                                    <th>Account Head Name</th>
                                                    <th>Status</th>
                                                    <th>Description</th>
                                                    @*<th>Payment Clear Date</th>
                                                    <th>Action</th>*@
                                                </tr>
                                            </thead>
                                            <tbody>
                                               @if (Model != null)
                                               {
                                                   if (Model.lstPlot != null)
                                                   {
                                                       int i = 1;
                                                       foreach (var Item in Model.lstPlot)
                                                       {
                                                        <tr class="text-left">
                                                            <td hidden><input type="hidden" id="PK_BookingDetailsId_@i" name="PK_BookingDetailsId_@i"value="@Item.UserID"/></td>
                                                            <td><input type="checkbox" name="chkpayment_@i" /> @i</td>
                                                            <td>@Item.CustomerID (@Item.CustomerName)</td>
                                                            <td>@Item.AssociateID (@Item.AssociateName)</td>

                                                            <td>@Item.BranchName</td>
                                                            <td>@Item.SiteName</td>
                                                            <td>@Item.SectorName</td>
                                                            <td>@Item.BlockName</td>
                                                            <td>@Item.PlotNumber</td>
                                                            <td>@Item.PaymentMode</td>
                                                            <td>@Item.TransactionDate</td>
                                                            <td>@Item.TransactionNumber</td>
                                                            <td>@Item.ReceiverBank</td>
                                                            <td>@Item.PaymentRemarks</td>
                                                            <td>@Item.Remark</td>
                                                            <td>@Item.PaidAmount</td>
                                                            <td>@Item.PaymentDate</td>
                                                            <td>@Item.AccountHeadName</td>
                                                            <td>@Item.PaymentStatus</td>
                                                            <td>
                                                                <input type="text" id="txtDesc @i" name="txtDesc_@i" onchange="getdata(this)" />
                                                            </td>
                                                            @*<td>
                                                                <input type="date" id="txtAppDate @i" name="txtAppDate @i" onchange="getdata2(this)" />
                                                            </td>*@
                                                            @*<td>*@
                                                                @*<a href="#" class="btn btn-success btn-sm" onclick="Approve('@i','@Item.UserID');">Approve</a>
                                                                <a href="#" class="btn btn-danger btn-sm" onclick="Reject('@i','@Item.UserID');">Reject</a>*@
                                                            @*</td>*@
                                                        </tr>
                                                           i++;
                                                       }
                                                    <input type="hidden" id="hdRows" name="hdRows" value="@i" />
                                                   }
                                               }
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Customer ID</th>
                                                    <th>Affiliate ID</th>
                                                    <th>Branch Name</th>
                                                    <th>Site Name</th>
                                                    <th>Sector Name</th>
                                                    <th>Block Name</th>
                                                    <th>Plot Number</th>
                                                    <th>Mode</th>
                                                    <th>Date</th>
                                                    <th>Transaction No.</th>
                                                    <th>Receiver Bank</th>
                                                    <th>Payment Remarks</th>
                                                    <th>Bank Details</th>
                                                    <th>Amount</th>
                                                    <th>Payment Date</th>
                                                    <th>Account Head Name</th>
                                                    <th>Status</th>
                                                    <th>Description</th>
                                                    @*<th>Payment Clear Date</th>
                                                    <th>Action</th>*@
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>Payment Clear Date</label>
                                            @Html.TextBoxFor(m => m.ApprovedDate, new { @class="form-control",@readonly=true,@placeholder="DD/MM/YYYY"})
                                        
                                        </div>
                                        <div class="col-md-3">
                                            <br />
                                            <input type="submit" id="btnapprove" onclick="return Validate();" name="btnapprove" class="btn btn-success btn-sm" value="Approve" />
                                            <input type="submit" id="btnreject" onclick="return Validate();" name="btnreject" class="btn btn-danger btn-sm" value="Reject" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="txtdecription" />
      <input type="hidden" id="txtAppDt" />

}
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>

