<script>
    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#ApprovedFromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });
    $('#ApprovedToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
        $('#dataTables-example').DataTable({
            responsive: true,

        });
    });

    function Approve(id, userid) {
        var r = confirm('Are you sure you want to update this Payment ?');
        if (r == true) {
            $("#divload").css({ 'display': '' });
            var Description = $('#txtdecription').val();
            var ApprovedDate = $('#txtAppDate').val();

            $.ajax({
                url: "/Plot/ReverseApprovePaymentDetails",
                type: "GET", 
                dataType: "JSON",
                data: {
                    UserID: userid,
                    Description: Description,
                    ApprovedDate: ApprovedDate
                },
                success: function (data) {
                    if (data.Result === "Yes") {
                        alert("Payment Updated successfully");
                    } else {
                        alert(data.Result);
                    }

                    window.location.href = '/Plot/ReverseApprovePayment';
                },
                error: function (xhr, status, error) {
                    alert("An error occurred: " + error);
                }
            });
        }
    }

    function getdata(decription) {
        $('#txtdecription').val(decription.value);
    }
    function getdata2(date) {
        $('#txtAppDate').val(date.value);
    }
    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true
    });

</script>